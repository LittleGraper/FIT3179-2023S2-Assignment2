{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 500,
  "height": 500,
  "title": "Earthquakes of magnitude above 6 between 2000 and 2022 in Japan",
  "projection": {
    "type": "equirectangular"
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/LittleGraper/FIT3179-2023S2-Assignment2/main/js/Japan_topo.topojson",
        "format": {
          "type": "topojson",
          "feature": "Japan_topo"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "black"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/LittleGraper/FIT3179-2023S2-Assignment2/main/data/Earthquake_Japan.csv"
      },
      "mark": {
        "type": "circle"
      },
      "encoding": {
        "tooltip": [
          {
            "field": "Time",
            "type": "nominal"
          },
          {
            "field": "Magnitude",
            "type": "quantitative",
            "format": ","
          },
          {
            "field": "Depth",
            "type": "quantitative",
            "format": ","
          },
          {
            "field": "Latitude",
            "type": "quantitative",
            "format": ""
          },
          {
            "field": "Longitude",
            "type": "quantitative",
            "format": ","
          },
          {
            "field": "Place"
          }
        ],
        "longitude": {
          "field": "Longitude",
          "type": "quantitative"
        },
        "latitude": {
          "field": "Latitude",
          "type": "quantitative"
        },
        "size": {
          "field": "Magnitude",
          "type": "quantitative",
          "title": "Magnitude",
          "scale": {
            "domain": [
              6,
              8
            ],
            "range": [
              30,
              100
            ]
          }
        },
        "color": {
          "field": "Scale",
          "type": "nominal",
          "title": "Scale",
          "sort": [
            "Great",
            "Major",
            "Strong",
            "Moderate"
          ],
          "scale": {
            "domain": [
              "Great",
              "Major",
              "Strong",
              "Moderate"
            ],
            "range": [
              "#e41a1c",
              "#ff7f00",
              "#4da4eb",
              "#c6dbe9"
            ]
          }
        }
      }
    }
  ]
}