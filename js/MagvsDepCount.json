{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "https://raw.githubusercontent.com/LittleGraper/FIT3179-2023S2-Assignment2/main/data/Earthquake_Japan.csv"
    },
    "mark": "rect",
    "width": 300,
    "height": 200,
    "encoding": {
        "x": {
            "bin": {
                "maxbins": 40
            },
            "title": "Magnitude",
            "field": "Magnitude",
            "type": "quantitative"
        },
        "y": {
            "title": "Focal Depth",
            "bin": {
                "maxbins": 40
            },
            "field": "Depth",
            "type": "quantitative"
        },
        "color": {
            "aggregate": "count",
            "type": "quantitative"
        },
        "tooltip": [
            {
                "field": "Magnitude"
            },
            {
                "field": "Magnitude",
                "aggregate": "count"
            },
            {
                "field": "Depth",
                "aggregate": "count"
            }
        ]
    },
    "config": {
        "view": {
            "stroke": "transparent"
        }
    }
}